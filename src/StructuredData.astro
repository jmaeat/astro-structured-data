---
export interface Props {
	localBusiness?: {
		name: string;
		address: {
			streetAddress: string;
			addressLocality: string;
			addressRegion: string;
			postalCode: string;
		};
		type?: string;
		department?: string;
		geo?: {
			latitude: number;
			longitude: number;
		};
		menu?: URL | string;
		priceRange?: string;
		// review
		servesCuisine?: string;
		telephone?: string;
		url?: URL | string;
	};
	organization?: {
		name: string;
		url?: URL | string;
		logo?: {
			file?: string;
			caption?: string;
		};
	};
}

const { props } = Astro;

const schema = {
	'@context': 'https://schema.org/',
	'@graph': [props.localBusiness],
};
---

<script set:html={JSON.stringify(schema)} type="application/ld+json"></script>
